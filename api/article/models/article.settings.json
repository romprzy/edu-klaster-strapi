{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "published": {
      "type": "boolean"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "tags": {
      "collection": "tag"
    },
    "category": {
      "model": "category"
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "myth": {
      "type": "richtext"
    },
    "fact": {
      "type": "richtext"
    }
  }
}
